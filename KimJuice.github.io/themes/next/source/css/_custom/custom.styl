// Custom styles.

body {
        background:url(/images/bg.jpg);
        background-size:cover;
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-position:center;
     }

.content {
            border-radius: 10px;
            margin-top: 0px;
            background:rgba(255,255,255,0.6) none repeat scroll !important;
         }

.posts-expand {
    padding-top: 1%;
    padding-left: 2%;
    padding-right: 2%;
    padding-bottom: 1%;
}

.posts-expand .post {
    margin-top: 20px;
}

.main-inner {
                width: 67%;
            }

.header {
          background:rgba(255,255,255,0.8) none repeat scroll !important;
        }

.footer {
          background:rgba(255,255,255,0.8) none repeat scroll !important;
        }

#sidebar {
            background:rgba(0,0,0,0.8);
            background-size: cover;
            background-position:center;
            background-repeat:no-repeat;
         }

.comments {
    margin: 50px 0;
    border-radius: 10px;
    background:rgba(255,255,255,0.6) none repeat scroll !important;
    padding-left: 3%;
    padding-right: 3%;
}

.use-motion .post-block, .use-motion .pagination, .use-motion .comments {
    padding-top: 1%;
    padding-left: 4%;
    padding-right: 4%;
    padding-bottom: 1%;
}
